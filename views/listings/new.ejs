<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >

      <div class="mb-3">
      <label for="title" class="form-label" >Title</label>
      <input name="listing[title]" placeholder="Give your listing a catchy title..." type="text" class="form-control" required/>
      <div class="valid-feedback">
        Title looks good !
      </div>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="Tell travelers what makes this place special..."
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please enter a short description</div>
    </div>

      <div class="mb-3">
        <label for="Image" class="form-label">Upload Image</label>
      <input
        name="listing[image]"
        type="file"
        class="form-control"
        required
      />
    </div>
    <div class="row">
    <div class="mb-3 col-4">
      <label for="price" class="form-label" required>Price</label>
      <input name="listing[price]" placeholder="Set your price"  class="form-control" required />
      <div class="invalid-feedback">Price should be valid</div>
    </div>


    
    <div class="mb-3 col-8">
      <label for="country" class="form-label" >Country</label>
      <input
        name="listing[country]"
        placeholder="Where in the world is your listing"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Country name should be valid</div>
     </div>
  </div>

      <div class="mb-3">
      <label for="location" class="form-label" >Location</label>
      <input name="listing[location]" placeholder="Enter the city or region for your property" type="text" class="form-control" required />
      <div class="invalid-feedback">Location should be valid</div>
    </div>

      <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    <br>
  </div>
</div>